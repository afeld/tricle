<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <table>
      <% @report.sections.each do |section| %>
        <tr>
          <th class="section-heading" colspan="4"><%= section.title %></th>
        </tr>
        <% if section.is_a?(Tricle::List) %>
          <%= @report.list_markup(section) %>
        <% else %>
          <tr>
            <th><!--Title--></th>
            <th>
              <div>Last week</div>
              <%= @report.last_week_dates_cell %>
            </th>
            <th>
              <div>Previous week</div>
              <%= @report.previous_week_dates_cell %>
            </th>
            <th>
              <div>Quarterly average</div>
              <%= @report.quarter_dates_cell %>
            </th>
          </tr>
          <% section.metric_presenters.each do |metric| %>
            <tr>
              <th class="metric-title"><%= metric.title %></th>
              <td>
                <div><%= @report.number_with_delimiter(metric.last_week) %></div>
                <div><%= @report.number_with_delimiter(metric.total) %> (total)</div>
              </td>
              <%= @report.percent_change_cell(metric.last_week, metric.weeks_ago(2)) %>
              <%= @report.percent_change_cell(metric.last_week, metric.week_average_this_quarter) %>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    </table>
  </body>
</html>
